@model IEnumerable<StudentAffairs.Dtos.Students.StudentsDto>
@using StudentAffairs.Utilities
@using StudentAffairs.Enums
@{
    ViewBag.Title = "المحولين من المدرسة ";

}
<div class="card">
    <div class="card-header">

        <div class="row">
            <h2 class="col">@ViewBag.Title  </h2>

          
        </div>
    </div>
   

    <div class="card-body">
        <table id="datatable" class="table table-striped dt-responsive  nowrap w-100 table-bordered ">
            <thead class="bg-soft-primary">
                <tr>
                    <th>
                        @Html.DisplayName("الكود")
                    </th>
                    <th>
                        @Html.DisplayName("الاسم")
                    </th>
                    <th>
                        @Html.DisplayName("رقم التليفون")
                    </th>

                    <th>
                        @Html.DisplayName("الصورة الشخصية")
                    </th>
                    <th>
                        @Html.DisplayName("تاريخ الميلاد")
                    </th>
                    <th>
                        @Html.DisplayName("النوع")
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>

                        <td>
                            <img src="@item.Image" width="50" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BirthDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ((Gender)item.GenderId).ToString())
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $("#StudyTypeId").change(function () {
            $.get('/Students/getLevels', { Id: $("#StudyTypeId").val() }, function (data) {
                $("#LevelId").empty();
                $("#LevelId").append("<option>--اختر--</option>")
                $.each(data, function (key, value) {
                    $("#LevelId").append("<option value=" + value["Id"] + ">" + value["Name"] + "</option>")
                });
            });
        });
        $("#LevelId").change(function () {
            $.get('/Students/getClasses', { Id: $("#LevelId").val() }, function (data) {
                $("#ClassId").empty();
                $("#ClassId").append("<option>--اختر--</option>")
                $.each(data, function (key, value) {
                    $("#ClassId").append("<option value=" + value["Id"] + ">" + value["Name"] + "</option>")
                });
            });
        });
        function excel() {
            $("#exampleModal").modal('show');
        }

    </script>
}
